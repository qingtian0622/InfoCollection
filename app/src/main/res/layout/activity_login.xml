<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e7e7e7"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x250"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/x50"
            android:paddingLeft="@dimen/x50"
            android:text="用户登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/x70" />
    </LinearLayout>

    <EditText
        android:id="@+id/sign_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_input_circular"
        android:gravity="center_vertical"
        android:hint="手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#383838"
        android:textColorHint="#999999"
        android:textCursorDrawable="@null"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/sign_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_input_circular"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp">

        <EditText
            android:id="@+id/sign_code_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:hint="验证码"
            android:inputType="phone"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="4"
            android:layout_weight="1"
            android:paddingLeft="10dp"

            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#383838"
            android:textColorHint="#999999"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sign_coed"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignRight="@+id/sign_code_tv"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/mine_select_btn_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sign_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/sel_btn_circular"
        android:gravity="center"
        android:padding="10dp"
        android:text="登录"
        android:textColor="@color/c_ffffff"
        android:textSize="16sp" />
</LinearLayout>
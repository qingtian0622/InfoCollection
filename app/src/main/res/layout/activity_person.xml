<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e7e7e7"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x280"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x200"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="我的设备"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x80"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|bottom"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:background="@mipmap/white_back"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:layout_marginTop="@dimen/x20"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x280"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x50"
            android:orientation="vertical">
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#e7e7e7"/>
            <TextView
                android:id="@+id/position"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#e7e7e7"/>
    <TextView
        android:id="@+id/dept"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x50"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x180"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#e7e7e7"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x50"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x180"/>

    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x50"
        android:text="设备信息:"
        android:background="#fff"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x180"/>
    <LinearLayout
        android:id="@+id/device_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f3f4f5"/>
        <TextView
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f3f4f5"/>
        <TextView
            android:id="@+id/ime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f3f4f5"/>
        <TextView
            android:id="@+id/imsi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f3f4f5"/>
        <TextView
            android:id="@+id/vc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f3f4f5"/>
        <TextView
            android:id="@+id/vn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f3f4f5"/>
        <TextView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:drawablePadding="@dimen/x50"
            android:drawableRight="@mipmap/right_jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x50"
            android:text="个人资料"
            android:background="#fff"
            android:textColor="@android:color/black"/>

    </LinearLayout>
</LinearLayout>